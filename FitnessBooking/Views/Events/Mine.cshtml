@model IEnumerable<FitnessBooking.Models.Event>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcoming Events</h2>

<ul class="events voffset4">
    @foreach (var evt in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @evt.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @evt.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="instructor">
                    @evt.Description
                </span>
                <span class="event">
                    @evt.EventType.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Events", new {id = evt.Id})">
                        Edit
                    </a> |
                    <a href="#" class="js-cancel-evt" data-evt-id="@evt.Id">
                        Cancel
                    </a>
                </div>

            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-evt").click(function (e) {
                var link = $(e.target);

                bootbox.dialog({
                    message: "Are you sure you want to cancel this event?",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No",
                            className: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                        url: "/api/events/" + link.attr("data-evt-id"),
                                        method: "DELETE"
                                    })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Something failed!");
                                    });
                            }
                        }
                    }
                });
            });
        });
    </script>
}
