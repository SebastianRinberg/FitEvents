@model FitnessBooking.ViewModels.EventFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>


@using (Html.BeginForm(Model.Action, "Events"))
{
    <p class="alert alert-info">All fields are <strong>Required</strong>.</p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Description) 
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", autofocus = "autofocus", placeholder = "short description of event" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "ex 1 Jan 2020" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "ex 20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EventType)
        @Html.DropDownListFor(m => m.EventType, new SelectList(Model.EventTypes, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EventType)
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

